@using EntityLayer.Concrete
@model List<Writer>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Hakkında</h4>
                <div class="d-flex mt-5 align-items-top">
                    <img src="~/writer/assets/images/faces/face3.jpg" class="img-sm rounded-circle mr-3" alt="image">
                    <div class="mb-0 flex-grow">
                        @if (Model != null && Model.Count > 0)
                        {
                            <h5 class="mr-2 mb-2">@Model[0].WriterName</h5>
                            <p class="mb-0 font-weight-light">@Model[0].WriterAbout</p>
                        }
                        else
                        {
                            <p>Yazar bilgisi bulunamadı.</p>
                        }
                    </div>
                    <div class="ml-auto">
                        <i class="mdi mdi-heart-outline text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
